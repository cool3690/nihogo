<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Work"
    tools:showIn="@layout/work">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/aki_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/manf"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/jobmanf" />

        <ImageView
            android:id="@+id/it"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/manf"
            android:layout_marginTop="10dp"

            app:srcCompat="@drawable/jobit" />

        <ImageView
            android:id="@+id/sell"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/it"

            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/jobsell" />

        <ImageView
            android:id="@+id/fin"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/sell"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/jobfin" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>