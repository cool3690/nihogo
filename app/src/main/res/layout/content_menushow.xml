        <RelativeLayout
            android:id="@+id/R3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/aki_daysbg01"
                />
            <ImageView
                android:id="@+id/pic3"
                app:srcCompat="@drawable/aki_snow"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                />
            <TextView
                android:id="@+id/jp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_toRightOf="@id/pic3"
                android:layout_marginLeft="20dp"
                android:textSize="22sp"
                android:text="每日單詞" />

            <TextView
                android:id="@+id/ch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/jp3"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/pic3"
                android:gravity="center"
                android:text="ch"
                android:textColor="#227FE3"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@id/jp3"
                android:layout_toRightOf="@id/ch3"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#354BD6"
                android:text="(N5)" />

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>