<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    tools:context=".Reviewn5"
    tools:showIn="@layout/reviewn5">

    <RelativeLayout
        android:id="@+id/R0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/L0"
            android:orientation="vertical">
            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/btn_primary2"
                    android:text=" N1 " />
                <Button
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/btn_primary2"
                    android:text=" N2 " />
                <Button
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/btn_primary2"
                    android:text=" N3 " />
                <Button
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/btn_primary2"
                    android:text=" N4 " />
                <Button
                    android:id="@+id/bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/btn_primary2"
                    android:text=" N5 " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight=".7"
                    android:layout_marginTop="10dp"
                    android:inputType="textPersonName"
                    android:hint="N5單字查詢"/>
                <Button
                    android:id="@+id/send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:layout_marginTop="5dp"
                    style="@style/btn_primary"
                    android:text="查詢" />


            </LinearLayout>


            <TextView
                android:id="@+id/pinyin"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp"

                android:text="pinyin" />
            <TextView
                android:id="@+id/jp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="34sp"

                android:text="jp" />
            <TextView
                android:id="@+id/ch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:textSize="28sp"
                android:text="ch" />
            <TextView
                android:id="@+id/meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:textSize="20sp"
                android:text="meaning" />
            <TextView
                android:id="@+id/level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:textSize="22sp"
                android:text="自動" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    style="@style/btn_primary"
                    android:layout_marginLeft="10dp"
                    android:text="自動輪播" />
                <Button
                    android:id="@+id/hand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    style="@style/btn_primary"
                    android:text="手動輪播" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="自動輪播秒數  "/>
                <Spinner
                    android:id="@+id/sec"

                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="   秒"/>
            </LinearLayout>

            <TextView
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:textSize="14sp"
                android:text="" />
            <!--注意:安裝google手寫板日文套件即可使用日文手寫功能-->
        </LinearLayout>







        <RelativeLayout
            android:id="@+id/R3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/aki_daysbg01"
                />
            <ImageView
                android:id="@+id/pic3"
                app:srcCompat="@drawable/aki_snow"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                />
            <TextView
                android:id="@+id/jp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_toRightOf="@id/pic3"
                android:layout_marginLeft="20dp"
                android:textSize="22sp"
                android:text="每日單詞" />

            <TextView
                android:id="@+id/ch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/jp3"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/pic3"
                android:gravity="center"
                android:text="ch"
                android:textColor="#227FE3"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@id/jp3"
                android:layout_toRightOf="@id/ch3"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#354BD6"
                android:text="(N5)" />

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>