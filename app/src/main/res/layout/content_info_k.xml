<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:visibility="visible"
    android:fillViewport="true"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/L1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight=".7"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="短期遊學" />

                <ImageView
                    android:id="@+id/left"
                    android:layout_width="30dp"
                    android:layout_height="20dp"


                    app:srcCompat="@drawable/arrow" />
                <ImageView
                    android:id="@+id/right"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="-7dp"

                    app:srcCompat="@drawable/arrow2" />
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="102dp"

                android:layout_marginTop="10dp"
                android:layout_below="@+id/L1"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/new_info"/>
        <TextView
            android:id="@+id/schooltxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/L1"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"

            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#FFF"
            android:text="eee"/>
        <TextView
            android:id="@+id/conschttxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/schooltxt"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:scrollbars = "vertical"
            android:textSize="13sp"

            android:text="內容"/>
            <LinearLayout
                android:id="@+id/L2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="32dp"
                android:gravity="center"
                android:layout_marginRight="32dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight=".7"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="長期就業準備" />

                <ImageView
                    android:id="@+id/left2"
                    android:layout_width="30dp"
                    android:layout_height="20dp"


                    app:srcCompat="@drawable/arrow" />
                <ImageView
                    android:id="@+id/right2"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="-7dp"
                    app:srcCompat="@drawable/arrow2" />
            </LinearLayout>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/L2"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/new_info"/>
        <TextView
            android:id="@+id/jobtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/L2"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#FFF"
            android:text="長期就業"/>
        <TextView
            android:id="@+id/conjobttxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/jobtxt"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"

            android:textSize="13sp"

            android:text="內容"/>
        <LinearLayout
            android:id="@+id/L3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/line2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight=".7"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="日語考試情報" />

            <ImageView
                android:id="@+id/left3"
                android:layout_width="30dp"
                android:layout_height="20dp"

                app:srcCompat="@drawable/arrow" />
            <ImageView
                android:id="@+id/right3"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="-7dp"
                app:srcCompat="@drawable/arrow2" />
        </LinearLayout>
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/L3"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/jlpt_info"/>

        <TextView
            android:id="@+id/examtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/L3"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#FFF"
            android:text="JLPT"/>
        <LinearLayout
            android:id="@+id/L4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/examtxt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/examyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="2020第一回"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="網路報名時間:"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/mydate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#761DE6"
                    android:text="12/3-12/20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/examttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="考試時間："
                    android:textSize="13sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="  0 "
                        android:textColor="#761DE6"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/daytxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:textColor="#761DE6"
                        android:text="天後"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@drawable/bottom_navigation_selector"
            app:itemTextColor="@drawable/bottom_navigation_selector"
            android:background="?android:attr/windowBackground"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_nav_menu" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout >