<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad_orange">

        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingRight="34dp"
            android:paddingLeft="34dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spnlev"
                android:layout_width="150dp"
                android:popupBackground="#FFE7CA"
                android:background="@drawable/bg_spnorange"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spntype"
                android:layout_width="160dp"
                android:layout_height="wrap_content"

                android:popupBackground="#FFE7CA"
                android:background="@drawable/bg_spnorange"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
        <!--part 1-->
        <RelativeLayout
            android:id="@+id/R1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L1"
            android:minHeight="400dp"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_above="@id/nav_view"
            android:layout_marginBottom="60dp">
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:minHeight="400dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bg"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/pinyin"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"

        android:text="pinyin" />
    <TextView
        android:id="@+id/jp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="34sp"

        android:text="jp" />
    <TextView
        android:id="@+id/ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"

        android:textSize="28sp"
        android:text="ch" />
    <TextView
        android:id="@+id/meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"

        android:textSize="20sp"
        android:text="meaning" />
    <TextView
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"

        android:textSize="22sp"
        android:text="level" />
</LinearLayout>






        </RelativeLayout>

        <!--單字彈出-->

        <RelativeLayout
            android:id="@+id/R3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/aki_daysbg01"
                />
            <ImageView
                android:id="@+id/pic3"
                app:srcCompat="@drawable/aki_snow"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                />
            <!--
            <TextView
                android:id="@+id/jp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_toRightOf="@id/pic3"
                android:layout_marginLeft="20dp"
                android:textSize="22sp"
                android:text="每日單詞" />

            <TextView
                android:id="@+id/ch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/jp3"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/pic3"
                android:gravity="center"
                android:text="ch3"
                android:textColor="#227FE3"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@id/jp3"
                android:layout_toRightOf="@id/ch3"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#354BD6"
                android:text="(N5)level3" />
            -->
        </RelativeLayout>

        <!--end-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@id/nav_view"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <View
                android:id="@+id/btnpre"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".1"
                android:scaleType="fitXY"

                android:background="@drawable/polyorange"
                />
            <TextView
                android:id="@+id/pretxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight=".15"
                android:text="上一題"
                android:textSize="15sp" />

            <View
                android:id="@+id/blank"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".5"
                />
            <TextView
                android:id="@+id/nexttxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="right"
                android:layout_weight=".15"
                android:text="下一題"
                android:textSize="15sp" />
            <View
                android:id="@+id/btnnext"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal|right"
                android:scaleType="fitXY"
                android:layout_weight=".1"
                android:background="@drawable/polyorange2"
                />
        </LinearLayout>

<!-- part 4 tango-->
    <RelativeLayout
        android:id="@+id/R4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_above="@id/nav_view"
        android:layout_marginBottom="65dp">
        <ImageView
            android:id="@+id/showup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/showup"
            />

    </RelativeLayout>
        <!-- part 5 tango-->
        <RelativeLayout
            android:id="@+id/R5"
            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:background="#FFE7CA"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_above="@id/nav_view"
            android:layout_marginBottom="60dp">
            <ImageView
                android:id="@+id/showoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/showoff"
                />
            <TextView
                android:id="@+id/jp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FF6B00"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_below="@id/showoff"
                android:layout_marginLeft="22dp"
                android:textSize="12sp"
                android:text="每日單詞" />
            <TextView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@id/jp3"

                android:layout_marginLeft="22dp"
                android:textSize="14sp"
                android:textColor="#FF6B00"
                android:text="(N5)level3" />
            <TextView
                android:id="@+id/ch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/showoff"
                android:layout_gravity="center"
                android:layout_marginRight="22dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="ch3"
                android:textColor="#FF6B00"
                android:textSize="24sp" />
        </RelativeLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@drawable/bottom_navigation_selector"
            app:itemTextColor="@drawable/bottom_navigation_selector"
            android:background="?android:attr/windowBackground"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_nav_menu" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>