<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="4dip" />
            <!--邊框-->
            <stroke android:width="0dip" android:color="#F1F895" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#F4F6AF" android:endColor="#FBF1B8"  />
        </shape>
    </item>

    <!-- 預設時 -->
    <item android:color="#fff">
        <shape android:shape="rectangle" >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#CDE6F3E9" />
            <gradient android:angle="-90" android:startColor="#fff" android:endColor="#fff"  />
        </shape>
    </item>

</selector>